{
  "apps": [
    {
      "name": "www",
      "script": "server.js",
      "env": { "PORT": "9001" },
      "env_production": { "NODE_ENV": "production" }
    }
  ],
  "deploy": {
    "production": {
      "user": "pm2",
      "host": "wordcloud.plugin.overviewproject.org",
      "ref": "origin/master",
      "repo": "https://github.com/overview/overview-word-cloud.git",
      "path": "/opt/pm2/overview-word-cloud",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
